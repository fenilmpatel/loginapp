<body>
 
<div class="container">
    <div class="header"> 
         {{#if user}}
  <a href="/" class="btn btn-info btn lg active" role="button" aria-pressed="true">Dashboard</a> 
  <a href="/poll" class="btn btn-info btn lg active" role="button" aria-pressed="true">Online Poll</a> 
  <a href="/logout" class="btn btn-info btn lg active" role="button" aria-pressed="true">Logout</a> 
  <a href="/register" class="btn btn-info btn lg active" role="button" aria-pressed="true">Register</a> 
{{else}}
  <a href="/login" class="btn btn-info btn lg active" role="button" aria-pressed="true">Login</a> 
  <a href="/poll" class="btn btn-info btn lg active" role="button" aria-pressed="true">Online Poll</a> 
  <a href="/register" class="btn btn-info btn lg active" role="button" aria-pressed="true">Register</a> 
                </div>
       </div>             
                <button type="button" class="btn btn-primary">Login App</button>
        

        <div class="row">
            <div class="col-lg-12">
                {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
                {{/if}} {{#if error_msg}}
                <div class="alert alert-danger">{{error_msg}}</div>
                {{/if}} {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
                {{/if}} {{{body}}}
            </div>
        </div>

        <footer class="footer">
            <p>&copy; 2018 LoginApp, Inc.</p>
        </footer>

  
    <!-- /container -->
</body>
